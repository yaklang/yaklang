package main

import (
	"fmt"
	"log"
	"net/http"

	"github.com/gobuffalo/pop"
)

type User struct {
	ID   uint
	Name string
	Age  int
}

// connectDB 辅助函数，用于连接数据库
func connectDB() *pop.Connection {
	db, err := pop.Connect("development")
	if err != nil {
		log.Fatal(err)
	}
	return db
}

// secureLoginFixedQuery 不包含任何用户输入，执行预定义的查询
func secureLoginFixedQuery(w http.ResponseWriter, r *http.Request) {
	db := connectDB()
	defer db.Close()

	var users []User
	// 安全：不涉及用户输入的固定查询，无法被注入
	query := "SELECT * FROM users WHERE id = 1 AND name = 'admin'"
	if err := db.RawQuery(query).Scan(&users); err != nil {
		log.Printf("Error querying database: %v", err)
		http.Error(w, "Internal Server Error", http.StatusInternalServerError)
		return
	}

	// 打印结果
	for _, user := range users {
		fmt.Fprintf(w, "User: %s, Age: %d\n", user.Name, user.Age)
	}
	fmt.Fprintf(w, "Executed fixed query securely.\n")
}

func main() {
	http.HandleFunc("/secureFixedQuery", secureLoginFixedQuery)
	log.Fatal(http.ListenAndServe(":8080", nil))
}

