import (
	"io/ioutil"
	"log"
)

func main() {
	data := []byte("Hello, world!")
	err := ioutil.WriteFile("safe_file_ioutil.txt", data, 0644)
	if err != nil {
		log.Fatalf("WriteFile via ioutil failed: %v", err)
	}
	log.Println("File written successfully using ioutil.WriteFile.")
}

