// 假设以下是MyBatis Mapper接口和XML配置

// UserMapper.java
public interface UserMapper {
    User getUserById(@Param("id") int id);
    List<User> searchUsers(@Param("username") String username, @Param("status") String status);
}

// UserMapper.xml
/*
<mapper namespace="com.example.mapper.UserMapper">
    <select id="getUserById" resultType="com.example.model.User">
        SELECT * FROM users WHERE id = #{id}
    </select>

    <select id="searchUsers" resultType="com.example.model.User">
        SELECT * FROM users
        <where>
            <if test="username != null and username != ''">
                username LIKE CONCAT('%', #{username}, '%')
            </if>
            <if test="status != null and status != ''">
                AND status = #{status}
            </if>
        </where>
    </select>

    <insert id="insertUser">
        INSERT INTO users (name, email) VALUES (#{name}, #{email})
    </insert>
</mapper>
*/

// MainApplication.java (示例如何调用)
import org.apache.ibatis.session.SqlSession;
import org.apache.ibatis.session.SqlSessionFactory;
import com.example.mapper.UserMapper;
import com.example.model.User;

public class SafeMyBatisExample {

    private SqlSessionFactory sqlSessionFactory; // 假设已初始化

    public User findUser(String idParam) {
        try (SqlSession session = sqlSessionFactory.openSession()) {
            UserMapper mapper = session.getMapper(UserMapper.class);
            // MyBatis会自动处理#{id}的参数绑定，避免SQL注入
            // 这里将字符串转换为int，进一步保证类型安全
            return mapper.getUserById(Integer.parseInt(idParam));
        }
    }

    public List<User> queryUsers(String username, String status) {
        try (SqlSession session = sqlSessionFactory.openSession()) {
            UserMapper mapper = session.getMapper(UserMapper.class);
            // MyBatis动态SQL中的参数绑定
            return mapper.searchUsers(username, status);
        }
    }
}
