import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;

public class SafePreparedStatementExample {

    public ResultSet getUserById(Connection connection, String userId) throws SQLException {
        // 使用PreparedStatement进行参数化查询，防止SQL注入
        String sql = "SELECT * FROM users WHERE id = ?"; 
        try (PreparedStatement pstmt = connection.prepareStatement(sql)) {
            // 将用户输入作为参数绑定，而不是直接拼接到SQL字符串中
            // 强制转换为整型以确保类型安全，如果userId不是有效数字会抛出NumberFormatException，从而阻止注入
            pstmt.setInt(1, Integer.parseInt(userId)); 
            return pstmt.executeQuery();
        }
    }

    public ResultSet getUserByUsername(Connection connection, String username) throws SQLException {
        // 另一个使用PreparedStatement的示例
        String sql = "SELECT * FROM users WHERE username = ? AND active = true";
        try (PreparedStatement pstmt = connection.prepareStatement(sql)) {
            pstmt.setString(1, username); 
            return pstmt.executeQuery();
        }
    }

    public void insertUser(Connection connection, String name, int age) throws SQLException {
        String sql = "INSERT INTO users (name, age) VALUES (?, ?)";
        try (PreparedStatement pstmt = connection.prepareStatement(sql)) {
            pstmt.setString(1, name);
            pstmt.setInt(2, age);
            pstmt.executeUpdate();
        }
    }
}
