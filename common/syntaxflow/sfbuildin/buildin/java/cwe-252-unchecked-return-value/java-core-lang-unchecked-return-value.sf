// 安全的代码示例：正确使用String方法返回值
package org.example;

public class CorrectStringUsage {
    public static void main(String[] args) {
        String originalString = "Hello World!";
        // 确保接收并使用toLowerCase()的返回值
        String lowerCaseString = originalString.toLowerCase(); 
        System.out.println("Original: " + originalString); // 原始字符串未改变
        System.out.println("Lowercase: " + lowerCaseString); // 使用了新的字符串

        String modifiedString = originalString.replace('o', 'X'); // 接收并使用replace()返回值
        System.out.println("Modified: " + modifiedString);

        String subString = originalString.substring(6); // 接收并使用substring()返回值
        System.out.println("Substring: " + subString);
    }
}
