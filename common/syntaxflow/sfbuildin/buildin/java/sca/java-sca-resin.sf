	level: "high",
	message: "SCA: resin version 4.0.63 has a remote code execution vulnerability",
	cve: "CVE-2021-26291",
	title: "SCA: Check Java Resin Vulnerability",
	title_zh: "SCA: 检测Java Resin 依赖漏洞",
}
