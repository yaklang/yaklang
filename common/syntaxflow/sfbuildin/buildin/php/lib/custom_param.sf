desc(
    title: "check php custom extern variable",
    type: audit,
    lib: 'extern-variable-param-source'
)
_POST.* as $param1
_GET.* as $param2
_REQUEST.* as $param3

$param1 + $param2 + $param3 as $output
alert $output

desc(
    lang: php,
    alert_min: '3',
    'file://param.php': <<<PARAM
<?php
    $a = $_POST["a"];
    $b = $_GET["b"];
    $c = $_REQUEST["c"];
PARAM
)