      "type": "array",
      "title": "键值对",
      "minItems": 1,
      "items": {
        "properties": {
          "kind": {
            "title": "类型",
            "type": "string",
            "enum": [
                "Header",
                "Cookie",
                "GetParams",
                "PostParams"
            ],
            "default": "Header"
            },
          "key": {
            "title": "键",
            "type": "string"
          },
