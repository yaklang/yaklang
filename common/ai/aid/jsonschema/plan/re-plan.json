{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["@action", "next_plans"],
    "additionalProperties": false,
    "properties": {
        "@action": {
            "const": "re-plan",
            "description": "标识当前操作的具体类型"
        },
        "next_plans": {
            "type": "array",
            "description": "重新规划后的任务计划",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": ["name", "goal"],
                "additionalProperties": false,
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "子任务的简洁名称，使用动词+名词的格式（如'设计界面'、'编写代码'），长度控制在20个字内，便于引用和跟踪。"
                    },
                    "goal": {
                        "type": "string",
                        "description": "子任务的具体目标和完成标准。必须包含：1）明确的完成条件（什么情况下认为任务完成）；2）具体的输出要求或交付物；3）可量化的成功指标。例如：'获取到目标的A记录和AAAA记录IP地址列表'而非'收集域名信息'。避免使用'进一步分析'、'补充信息'等模糊表述。"
                    }
                }
            }
        }
    }
}